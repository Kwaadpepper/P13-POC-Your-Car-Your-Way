{
  "**/*.{ts,html}": [
    "sh -c 'cd frontend && npm run lint:ts:fix'"
  ],
  "**/*.css": [
    "sh -c 'cd frontend && npm run lint:css:fix'"
  ],
  "**/*.gradle.kts": [
    "sh -c 'cd backend && ./gradlew checkstyleMain checkstyleTest spotlessCheck --no-daemon'"
  ],
  "**/*.java": [
    "sh -c 'cd backend && ./gradlew checkstyleMain checkstyleTest spotlessCheck --no-daemon'"
  ]
}
