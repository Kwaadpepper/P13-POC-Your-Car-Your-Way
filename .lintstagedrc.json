{
  "**/*.{ts,html}": [
    "cd frontend && sh -c 'npm run lint:ts:fix'"
  ],
  "**/*.css": [
    "cd frontend && sh -c 'npm run lint:css:fix'"
  ],
  "**/*.gradle.kts": [
    "cd backend && ./gradlew checkstyleMain checkstyleTest spotlessCheck --no-daemon"
  ],
  "**/*.java": [
    "cd backend && ./gradlew checkstyleMain checkstyleTest spotlessCheck --no-daemon"
  ]
}
