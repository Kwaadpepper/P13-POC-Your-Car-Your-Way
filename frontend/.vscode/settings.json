{
  "editor.tabSize": 2,
  "conventionalCommits.scopes": [
    "front",
    "front-backoffice",
    "front-support",
    "front-shell",
    "front-shared"
  ],
  "editor.formatOnSave": true,
  "[html]": {
    "html.format.enable": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.autoIndent": "full",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
  },
  "[typescript]": {
    "editor.autoIndent": "full",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#cdc411",
    "activityBar.background": "#cdc411",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#0c938d",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#cdc411",
    "statusBar.background": "#9e970d",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#6f6a09",
    "statusBarItem.remoteBackground": "#9e970d",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#9e970d",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#9e970d99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#9e970d"
}
