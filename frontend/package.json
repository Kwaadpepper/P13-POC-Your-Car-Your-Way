{
  "name": "@ycyw/frontend",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve $npm_config_project",
    "build": "npm run lint && ng build $npm_config_project --configuration production",
    "watch": "ng build $npm_config_project --watch=true",
    "test": "ng test $npm_config_project --watch=false",
    "lint": "npm-run-all -s check:alias lint:ts lint:css",
    "lint:fix": "npm-run-all -s lint:ts:fix lint:css:fix",
    "lint:ts": "ng lint",
    "lint:ts:ci": "ng lint --format json --silent --quiet",
    "lint:ts:fix": "ng lint --fix",
    "lint:css": "node ./node_modules/.bin/stylelint --config './.stylelintrc.json' --max-warnings 0 \"projects/**/src/**/*.css\"",
    "lint:css:ci": "node ./node_modules/.bin/stylelint --config './.stylelintrc.json' --max-warnings 0 \"projects/**/src/**/*.css\" -f json",
    "lint:css:fix": "node ./node_modules/.bin/stylelint --config './.stylelintrc.json' --max-warnings 0 \"projects/**/src/**/*.css\" --fix",
    "check:alias": "node scripts/check-alias.mjs",
    "prepare": "husky install frontend/.husky"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular-architects/native-federation": "^20.1.2",
    "@angular/animations": "^20.1.6",
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/platform-browser": "^20.1.6",
    "@angular/router": "^20.1.6",
    "@primeuix/themes": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.11",
    "es-module-shims": "^1.10.1",
    "primeicons": "^7.0.0",
    "primeng": "^20.0.1",
    "rxjs": "~7.8.2",
    "tailwind-bootstrap-grid": "^6.0.0",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.5",
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/jasmine": "~5.1.8",
    "@types/node": "^22.17.0",
    "angular-eslint": "20.1.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.8.0",
    "json5": "^2.2.3",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.5",
    "ng-packagr": "^20.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "stylelint": "^16.23.1",
    "stylelint-actions-formatters": "^16.3.1",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^39.0.0",
    "tailwindcss-primeui": "^0.6.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.34.1"
  }
}
